<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailBarangTitle"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/detailBarangImage"
        android:src="@drawable/barang1"/>

    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailBarangTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="12dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/minus"
        app:layout_constraintTop_toBottomOf="@+id/detailBarangImage" />

    <Button
        android:layout_marginTop="12dp"
        android:id="@+id/plus"
        android:text="plus"
        android:textColor="@color/white"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/pcs"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/detailBarangImage"/>

    <Button
        android:layout_marginTop="12dp"
        android:id="@+id/minus"
        android:text="kurang"
        android:textColor="@color/white"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailBarangImage"/>

    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        android:id="@+id/totalHarga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcs"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/tambahKeranjang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Tambah keranjang"
        app:layout_constraintTop_toBottomOf="@+id/totalHarga"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>