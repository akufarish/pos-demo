<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".pages.produk.tambahProduk.TambahProdukActivity">

    <ImageButton
        android:id="@+id/uploadImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_image"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/image_button_content_desc" />

    <EditText
        android:layout_marginStart="18dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintStart_toEndOf="@+id/uploadImage"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/custom_input"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:id="@+id/namaBarangEditText"
        android:importantForAutofill="no" />

    <EditText
        android:layout_marginStart="18dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@+id/uploadImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:background="@drawable/custom_input"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:id="@+id/hargaEditText"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/tambahButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/keranjang_button"
        android:textColor="@color/white"
        android:text="@string/tambah_barang" />

</androidx.constraintlayout.widget.ConstraintLayout>